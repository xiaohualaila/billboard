<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3e4e4e4"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />

    <EditText
        android:id="@+id/village_id"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:digits="0123456789"
        android:focusable="true"
        android:hint="请输入小区编号"
        android:inputType="number"
        android:textSize="16sp"
        android:maxLength="9"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:background="@drawable/view_border"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:padding="1dp"
        android:background="@drawable/view_border">

        <RelativeLayout
            android:id="@+id/direction_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/direction_door"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="东门"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/direction_door_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_drop_down_black"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#b4b4b4" />

        <RelativeLayout
            android:id="@+id/open_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/open_door"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="进"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/open_door_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_drop_down_black"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/unit_id"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:digits="0123456789"
        android:focusable="true"
        android:hint="请输入单元号(可为空)"
        android:inputType="number"
        android:textSize="16sp"
        android:maxLength="6"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:background="@drawable/view_border"/>

    <EditText
        android:id="@+id/room_id"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:digits="0123456789"
        android:focusable="true"
        android:hint="请输入房间号(可为空)"
        android:inputType="number"
        android:textSize="16sp"
        android:maxLength="6"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:background="@drawable/view_border"/>

    <Button
        android:id="@+id/bt_set"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/select_bg"
        android:text="设置参数到终端"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:padding="1dp"
        android:background="@drawable/view_border">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:padding="10dp"
            android:textColor="#037BFF" />

    </ScrollView>

</LinearLayout>